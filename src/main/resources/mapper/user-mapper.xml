<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.moyunying.assistant.dao.UserMapper">

    <sql id="selectFields">
        id, username, password, salt, type, header_url, create_time, expire_time
    </sql>

    <sql id="insertFields">
        username, password, salt, type, header_url, create_time, expire_time
    </sql>

    <select id="selectByName" resultType="User">
        select <include refid="selectFields"></include>
        from user
        where username = #{username}
    </select>

    <insert id="insertUser" parameterType="User" keyProperty="id">
        insert into user(<include refid="insertFields"></include>)
        values(#{username}, #{password}, #{salt}, #{type}, #{headerUrl}, #{createTime}, #{expireTime})
    </insert>

    <update id="updateType">
        update user
        set type = #{type}
        where id = #{id}
    </update>

</mapper>
