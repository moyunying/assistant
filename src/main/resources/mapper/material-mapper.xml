<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.moyunying.assistant.dao.MaterialMapper">

    <sql id="selectFields">
        id, title, content, create_time, keyword
    </sql>

    <sql id="insertFields">
        title, content, create_time, keyword
    </sql>

    <insert id="insertMaterial" parameterType="Material" keyProperty="id">
        insert into material(<include refid="insertFields"></include>)
        values(#{title}, #{content}, #{createTime}, #{keyword})
    </insert>

    <select id="selectTotalByKeyword" resultType="int">
        select count(*)
        from material
        where keyword = #{keyword}
    </select>

    <select id="selectMaterialsByKeyword" resultType="Material">
        select <include refid="selectFields"></include>
        from material
        where keyword = #{keyword}
        order by create_time desc
        limit #{offset}, #{limit}
    </select>

</mapper>